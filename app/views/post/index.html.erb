<h1>Todolist</h1>

<%= link_to 'New', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li>ID : <%= post.id %> | Title : <%= post.title %> | Body : <%= post.body %>| <%= link_to 'show', post_path(post.id) %> | <%= link_to 'edit', edit_post_path(post.id) %> | <%= link_to 'destroy', post_path(post.id), data: {:confirm => 'Are you sure?'}, :method => :delete %> </li>
  <% end %>
</ul>
